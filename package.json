{
  "name": "ttg-server",
  "version": "0.0.1",
  "private": true,
  "lint-staged": {
    "**/*": [
      "prettier --write --ignore-unknown",
      "eslint"
    ]
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "cross-env LOG_LEVEL=debug nodemon --exec ts-node src/index.ts",
    "debug": "cross-env LOG_LEVEL=debug nodemon --inspect=0.0.0.0:9229 ./src/index.js --watch src",
    "format": "prettier --write .",
    "lint": "eslint .",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/js": "^9.12.0",
    "@tsconfig/node20": "^20.1.4",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/eslint": "^9.6.1",
    "@types/express": "^5.0.0",
    "@types/node": "^22.7.6",
    "@types/stoppable": "^1.1.3",
    "cross-env": "^7.0.3",
    "eslint": "^9.12.0",
    "globals": "^15.11.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "nodemon": "^3.1.7",
    "pino-pretty": "^11.3.0",
    "prettier": "3.3.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.10.0"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "helmet": "^8.0.0",
    "pino-http": "^10.3.0",
    "stoppable": "^1.1.0"
  }
}
